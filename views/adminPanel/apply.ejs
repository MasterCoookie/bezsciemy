<div class="background">
    <div class="shape-apply"></div>
    <div class="shape-apply"></div>
</div>

<div class="vertical-center">
    <div class="container-md application-form ">
        <div class="row">
            <div class="col text-center">
                <h2 class="text">BEZŚCIEMY Application Form</h2><br>
            </div>
        </div>
        <form>
            <div class="row justify-content-center">
                <div class="col-2 text-light">
                    <input type="radio" id="admin" name="app" value="admin">
                    <label>Admin</label>
                </div>
                <div class="col-2 text-light">
                    <input type="radio" id="redaktor" name="app" value="redaktor">
                    <label>Moderator</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label class="text">Tell us why we should choose you</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <textarea id="apptext" name="apptext" class="text application-textbox"
                    placeholder="Enter the content of your application here"></textarea>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-3 text-center">
                    <button id="sendapp" type="submit" class="btn-universal">Send</button>
                </div>
            </div>
        </form>

    </div>
</div>

