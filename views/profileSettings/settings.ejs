<%- include('../partials/head.ejs') %>
    <div>
        <h3 class="text">Yout current email:</h3>
        <form name="emailform">
            <label for="newemail" class="text">Change your email here:</label><br>
            <textarea id="newemail" name="newemail" 
            placeholder="Write your new email here">
            </textarea><br>
            <button type="submit" id="sendnewemail">Change email</button>
        </form>
        <form name="passwordform">
            <h3 class="text">Change your password</h3>
            <label for="oldpassword" class="text">Write your current password here:</label><br>
            <textarea id="oldpassword" name="oldpassword" 
            placeholder="Write your current password here">
            </textarea><br>
            <label for="newpassword" class="text">Write your new password here:</label><br>
            <textarea id="newpassword" name="newpassword" 
            placeholder="Write your new password here">
            </textarea><br>
            <label for="repeatpassword" class="text">Repeat your new password:</label><br>
            <textarea id="repeatpassword" name="repeatpassword" 
            placeholder="Repeat your new password">
            </textarea><br>
            <button type="submit" id="sendnewpassword">Change password</button>
        </form>

    </div>

</body>

</html>
