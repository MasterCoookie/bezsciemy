<%- include('../partials/head.ejs') %>

<div class="vertical-center">

    <div class="background">
        <div class="shape" ></div>
        <div class="shape"style="top: 10%"></div>
    </div>

    <div class="container-md mx-auto login-form px-2 mx-auto">
        <div class="row py-3">
            <!-- <div class="col">
                <h3 class="text loginTitle"></h3>
            </div> -->
        </div>
        <form id="emailform">
            <div class="row">
                <div class="col px-5">
                    <label for="newemail" class="text registerLabel">Your email: <%= user.email %><br />Change your email here:</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="email" id="newemail" name="newemail" 
                    placeholder="Enter your new email here" class="textbox">
                </div>
            </div>
            <div class="row py-4">
                <div class="col">
                    <button type="submit" id="sendnewemail" class="btn-universal">Change email</button>
                </div>
            </div>
        </form>
        <form id="passwordform">
            <div class="row">
                <div class="col px-5">
                    <label for="oldpassword" class="text registerLabel">Enter your current password here:</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="password" id="oldpassword" name="oldpassword" 
                    placeholder="Enter your current password here" class="textbox">
                </div>
            </div>
            <div class="row">
                <div class="col px-5">
                    <label for="newpassword" class="text registerLabel">Enter your new password here:</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="password" id="newpassword" name="newpassword" 
                    placeholder="Enter your new password here" class="textbox">
                </div>
            </div>
            <div class="row">
                <div class="col px-5">
                    <label for="repeatpassword" class="text registerLabel">Repeat your new password:</label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="password" id="repeatpassword" name="repeatpassword" 
                    placeholder="Repeat your new password" class="textbox">
                </div>
            </div>
            <div class="row py-4">
                <div class="col">
                    <button type="submit" id="sendnewpassword" class="btn-universal">Change password</button>
                </div>
            </div>
        </form>
    </div>
    <div id="updateToast" class="toast text-bg-transparent" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute;right: 50px; bottom: 50px;">
        <div class="toast-header text-bg-secondary">
          <strong class="me-auto">Updated</strong>
          <small>just now</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            <p class="alert-heading" id="update-message"></p>
        </div>
      </div>
</div>

