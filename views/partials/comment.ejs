<div class="comment">
    <h6 name="author" class="comment_author">
        <%= comment.comment_author %>
    </h6>
    <% if(comment.comment_father) { %>
        <h6 name="Respond" class="comment_author">
            <%= comment.comment_father %>>
        </h6>
        <% } %>
            <p name="comment_content" class="comment_text">
                <%= comment.comment_content %>
            </p>
            <button id="coment_respond" type="button">Respond</button>
</div>